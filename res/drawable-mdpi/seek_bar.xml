<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="0dip" />
			<gradient type="linear" android:startColor="#015398" android:endColor="#015398" android:centerY="0.25" android:angle="90" />
		</shape>
	</item>
	<item android:id="@android:id/secondaryProgress">
		<clip>
			<shape>
				<corners android:radius="0dip" />
				<gradient android:startColor="#003d60" android:centerY="0.25"
					android:endColor="#0075d9" android:angle="90" />			 
			</shape>
		</clip>
	</item>
	<item android:id="@android:id/progress">
		
		<clip>
			<shape>
				<corners android:radius="0dip" />			
				<gradient android:startColor="#0070cf" android:centerY="0.25"
					android:endColor="#0070cf" android:angle="90" />										
			</shape>
		</clip>
	</item>
</layer-list>
